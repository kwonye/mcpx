{
  "name": "mcpx-desktop",
  "version": "0.1.0",
  "private": true,
  "description": "mcpx desktop app",
  "main": "./out/main/index.js",
  "build": {
    "appId": "io.github.kwonye.mcpx",
    "productName": "mcpx",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
